
@model dynamic
@{
    ViewBag.Title = "Sell Product";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Sell Product</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="mb-3">
                    @Html.Label("Product", htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("ProductId", null, "Select Product", new { @class = "form-select", id = "ProductId" })
                </div>

                <div class="mb-3">
                    @Html.Label("Quantity", htmlAttributes: new { @class = "form-label" })
                    <input type="number" name="Quantity" class="form-control" min="1" required />
                </div>

                <div class="mb-3">
                    @Html.Label("Sale Price", htmlAttributes: new { @class = "form-label" })
                    <input type="number" step="0.01" name="SalePrice" class="form-control" min="0.01" required />
                </div>

                <button type="submit" class="btn btn-success w-100">Sell Product</button>
            }
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Load products dynamically based on selected product type
            $('#TypeId').change(function () {
                var typeId = $(this).val();
                if (typeId) {
                    $.getJSON('@Url.Action("GetProductsByType", "Products")', { typeId: typeId }, function (data) {
                        var items = '<option>Select Product</option>';
                        $.each(data, function (i, product) {
                            items += '<option value="' + product.ProductId + '">' + product.Name + ' (Stock: ' + product.QtyOnHand + ')</option>';
                        });
                        $('#ProductId').html(items);
                    });
                } else {
                    $('#ProductId').html('<option>Select Product</option>');
                }
            });
        });
    </script>
}