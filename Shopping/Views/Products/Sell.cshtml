@model dynamic
@{
    ViewBag.Title = "Sell Product";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient rounded-top-4 py-4"
                     style="background: linear-gradient(90deg, #7bff, #00c6ff);">
                    <h3 class="mb-0 fw-bold text-center text-dark" style="text-shadow: 0 1px 3px rgba(0,0,0,0.3);">
                        <i class="bi bi-cart4 me-2"></i> Sell Product
                    </h3>
                </div>


                <div class="card-body p-5">
                    <div class="row g-4">
                        <!-- Left side: Form -->
                        <div class="col-md-7 border-end">
                            @using (Html.BeginForm("Sell", "Sales", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <!-- Product -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold fs-5 text-secondary">
                                        <i class="bi bi-box-seam me-2"></i> Select Product
                                    </label>
                                    @Html.DropDownList("ProductId", null, "Choose Product",
                                        new { @class = "form-select form-select-lg border-light shadow-sm", required = "required" })
                                </div>

                                <!-- Quantity -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold fs-5 text-secondary">
                                        <i class="bi bi-plus-circle me-2"></i> Quantity
                                    </label>
                                    <input type="number" name="Quantity" id="Quantity"
                                           class="form-control form-control-lg border-light shadow-sm"
                                           min="1" required placeholder="Enter quantity" />
                                </div>

                                <!-- Price -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold fs-5 text-secondary">
                                        <i class="bi bi-cash-coin me-2"></i> Sale Price
                                    </label>
                                    <input type="number" step="0.01" name="SalePrice" id="SalePrice"
                                           class="form-control form-control-lg border-light shadow-sm"
                                           min="0.01" required placeholder="$0.00" />
                                </div>

                                <!-- Submit -->
                                <button type="submit" class="btn btn-success w-100 py-3 fw-bold fs-5 rounded-pill shadow-sm">
                                    <i class="bi bi-check-circle me-2"></i> Complete Sale
                                </button>
                            }
                        </div>

                        <!-- Right side: Summary -->
                        <div class="col-md-5">
                            <div class="bg-light rounded-4 p-4 shadow-sm h-100 d-flex flex-column justify-content-center text-center">
                                <h5 class="fw-bold text-dark mb-3">Sale Summary</h5>
                                <p class="mb-2">Quantity × Price</p>
                                <h2 class="fw-bold text-primary mb-4" id="totalDisplay">$0.00</h2>
                                <i class="bi bi-receipt-cutoff fs-1 text-muted"></i>
                                <p class="text-muted mt-3">Review details before completing sale.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control-lg, .form-select-lg {
        border-radius: 0.75rem;
        font-size: 1.1rem;
    }

    .btn-success {
        background: linear-gradient(90deg, #28a745, #20c997);
        border: none;
        transition: background 0.3s ease;
    }

        .btn-success:hover {
            background: linear-gradient(90deg, #218838, #17a2b8);
        }
</style>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function updateTotal() {
            var qty = parseFloat($("#Quantity").val()) || 0;
            var price = parseFloat($("#SalePrice").val()) || 0;
            var total = qty * price;
            $("#totalDisplay").text("$" + total.toFixed(2));
        }

        $(document).on("input", "#Quantity, #SalePrice", updateTotal);
    </script>
}
