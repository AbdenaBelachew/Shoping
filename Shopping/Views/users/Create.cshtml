@model Shopping.Models.user

@{
    ViewBag.Title = "Create User";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-primary mb-4">Create New User</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <div class="row g-3">

            <!-- Username -->
            <div class="col-md-6">
                <label class="form-label"><i class="bi bi-person-fill me-1"></i> Username</label>
                <input type="text" name="username" class="form-control" required autocomplete="off" placeholder="Enter username"/>
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>

            <!-- Password -->
            <div class="col-md-6">
                <label class="form-label"><i class="bi bi-lock-fill me-1"></i> Password</label>
                <input type="password" name="password" class="form-control" required autocomplete="new-password" placeholder="Enter Password"/>
            </div>

            <!-- Full Name -->
            <div class="col-md-6">
                <label class="form-label"><i class="bi bi-person-badge-fill me-1"></i> Full Name</label>
                <input type="text" name="full_name" class="form-control" placeholder="Enter Fullname"/>
                @Html.ValidationMessageFor(model => model.full_name, "", new { @class = "text-danger" })
            </div>

            <!-- Phone -->
            <div class="col-md-6">
                <label class="form-label"><i class="bi bi-telephone-fill me-1"></i> Phone</label>
                <input type="text" name="phone" class="form-control" placeholder="Enter Phone Num"/>
                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
            </div>

            <!-- Role -->
            <div class="col-md-6">
                <label class="form-label"><i class="bi bi-briefcase-fill me-1"></i> Role</label>
                @Html.DropDownListFor(model => model.role,
                    new SelectList(new[] { "Admin", "Manager", "Cashier" }),
                    "-- Select Role --",
                    new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
            </div>

            <!-- Licence Year -->
            <div class="col-md-6">
                <label class="form-label"><i class="bi bi-calendar-fill me-1"></i> Licence Year</label>
                <input type="number" name="Licence" class="form-control" value="@DateTime.Now.Year" min="@DateTime.Now.Year" />
                @Html.ValidationMessageFor(model => model.Licence, "", new { @class = "text-danger" })
            </div>

        </div>

        <!-- Submit Buttons -->
        <div class="mt-4">
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle-fill me-1"></i> Create</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    }

</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
