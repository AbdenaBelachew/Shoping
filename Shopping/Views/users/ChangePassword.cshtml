@{
    ViewBag.Title = "Change Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Shopping System</title>

    <link href="~/plugins/login.css" rel="stylesheet" />
    <style>
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f0f2f5;
        }

        .change-card {
            max-width: 500px;
            width: 100%;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            background: white;
            padding: 40px;
        }

            .change-card h2 {
                font-weight: 700;
                color: #0d6efd;
            }

            .change-card .form-control {
                border-radius: 10px;
                padding: 12px;
            }

            .change-card button {
                border-radius: 10px;
                padding: 12px;
                font-size: 1.1rem;
            }
    </style>
</head>
<body>
    <div class="card change-card">
        <h2 class="mb-4 text-center">Change Password</h2>
        <p class="text-muted mb-4 text-center">Update your account credentials below.</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }

        @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Current Password</label>
                <input type="password" name="currentPassword" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">New Password</label>
                <input type="password" name="newPassword" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm New Password</label>
                <input type="password" name="confirmPassword" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-success w-100">Change Password</button>
        }
    </div>

    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
