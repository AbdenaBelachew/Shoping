@model IEnumerable<Shopping.Models.Expens>
@{
    ViewBag.Title = "Expenses";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-wallet2 me-2"></i> Manage Expenses</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-circle"></i> Add Expense
        </button>
    </div>

    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search expenses...">
    </div>

    <table class="table table-bordered table-striped table-hover" id="expensesTable">
        <thead class="table-dark">
            <tr>
                <th>Expense Type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ExpenseType</td>
                    <td>@String.Format("{0:C}", item.Amount)</td>
                    <td>@item.ExpenseDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.Notes</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ExpenseId }, new { @class = "btn btn-sm btn-primary me-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ExpenseId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Add Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Expense Type</label>
                        <select name="ExpenseType" class="form-select" required>
                            <option value="">-- Select Type --</option>
                            <option>House Rent</option>
                            <option>Water</option>
                            <option>WiFi</option>
                            <option>Guard</option>
                            <option>Electricity</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Amount</label>
                        <input type="number" step="0.01" name="Amount" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" name="ExpenseDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea name="Notes" class="form-control" placeholder="Optional remarks..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Save</button>
                </form>
                <div id="errorMsg" class="text-danger mt-2 d-none">Failed to create expense.</div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            // search
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#expensesTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // create form
            $("#createForm").submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("Create", "Expenses")',
                    type: "POST",
                    data: $(this).serialize(),
                    success: function (res) {
                        if (res.success) {
                            location.reload();
                        } else {
                            $("#errorMsg").removeClass("d-none").text(res.errors ? res.errors.join(", ") : "Failed to create expense.");
                        }
                    },
                    error: function () {
                        $("#errorMsg").removeClass("d-none").text("Server error while creating expense.");
                    }
                });
            });
        });
    </script>
}
