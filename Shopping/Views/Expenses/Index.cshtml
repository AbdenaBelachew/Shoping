@model IEnumerable<Shopping.Models.Expens>

@{
    ViewBag.Title = "Expenses";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold"><i class="bi bi-wallet2 me-2"></i> Manage Expenses</h2>
        <button class="btn btn-success fw-bold" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-circle me-1"></i> Add Expense
        </button>
    </div>

    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search expenses...">
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-striped table-hover align-middle" id="expensesTable">
            <thead class="table-dark text-center">
                <tr>
                    <th>Expense Type</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center" data-expense-id="@item.ExpenseId">
                        <td>@item.ExpenseType</td>
                        <td>@String.Format("{0:C}", item.Amount)</td>
                        <td>@item.ExpenseDate.ToString("MM/dd/yyyy")</td>
                        <td>@item.Notes</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ExpenseId }, new { @class = "btn btn-sm btn-primary me-1" })
                            <button class="btn btn-sm btn-danger delete-expense" data-id="@item.ExpenseId" data-type="@item.ExpenseType">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Expense Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="createModalLabel"><i class="bi bi-plus-circle me-1"></i> Add Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Expense Type</label>
                        <select name="ExpenseType" class="form-select" required>
                            <option value="">-- Select Type --</option>
                            <option>House Rent</option>
                            <option>Water</option>
                            <option>WiFi</option>
                            <option>Guard</option>
                            <option>Electricity</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Amount</label>
                        <input type="number" step="0.01" name="Amount" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" name="ExpenseDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea name="Notes" class="form-control" placeholder="Optional remarks..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-success w-100 fw-bold">Save</button>
                </form>
                <div id="errorMsg" class="text-danger mt-2 d-none"></div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteExpenseModal" tabindex="-1" aria-labelledby="deleteExpenseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content shadow-sm">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteExpenseModalLabel"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <p>Are you sure you want to delete <strong id="deleteExpenseName"></strong>?</p>
                <input type="hidden" id="deleteExpenseId" />
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteExpenseBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Search
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#expensesTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            // Create Expense
            $("#createForm").submit(function (e) {
                e.preventDefault();
                var form = $(this);

                $.ajax({
                    url: '@Url.Action("Create", "Expenses")',
                    type: 'POST',
                    data: form.serialize(),
                    success: function (res) {
                        if (res.success) location.reload();
                        else $("#errorMsg").removeClass("d-none").text(res.errors ? res.errors.join(", ") : "Failed to create expense.");
                    },
                    error: function () {
                        $("#errorMsg").removeClass("d-none").text("Server error while creating expense.");
                    }
                });
            });

            // Open Delete Modal
            $(".delete-expense").click(function () {
                var expenseId = $(this).data("id");
                var expenseName = $(this).data("type");

                $("#deleteExpenseId").val(expenseId);
                $("#deleteExpenseName").text(expenseName);

                var modal = new bootstrap.Modal(document.getElementById('deleteExpenseModal'));
                modal.show();
            });

            // Confirm Delete
            $("#confirmDeleteExpenseBtn").click(function () {
                var expenseId = $("#deleteExpenseId").val();

                $.ajax({
                    url: '@Url.Action("DeleteConfirmed", "Expenses")',
                    type: 'POST',
                    data: { id: expenseId, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                    success: function (res) {
                        if (res.success) {
                            $('tr[data-expense-id="' + expenseId + '"]').fadeOut(500, function () { $(this).remove(); });
                            var modal = bootstrap.Modal.getInstance(document.getElementById('deleteExpenseModal'));
                            modal.hide();
                        } else {
                            alert(res.message || "Failed to delete expense.");
                        }
                    },
                    error: function () {
                        alert("Server error while deleting expense.");
                    }
                });
            });
        });
    </script>
}
