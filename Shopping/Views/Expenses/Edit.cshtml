@model Shopping.Models.Expens
@{
    ViewBag.Title = "Edit Expense";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-gradient bg-primary text-white text-center">
            <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Expense</h3>
        </div>
        <div class="card-body p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ExpenseId)

                <div class="row g-3">

                    <!-- Expense Type -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Expense Type</label>
                        <select name="ExpenseType" class="form-select shadow-sm" required>
                            <option value="">-- Select Type --</option>
                            <option value="House Rent" @(Model.ExpenseType == "House Rent" ? "selected" : "")>House Rent</option>
                            <option value="Water" @(Model.ExpenseType == "Water" ? "selected" : "")>Water</option>
                            <option value="WiFi" @(Model.ExpenseType == "WiFi" ? "selected" : "")>WiFi</option>
                            <option value="Guard" @(Model.ExpenseType == "Guard" ? "selected" : "")>Guard</option>
                            <option value="Electricity" @(Model.ExpenseType == "Electricity" ? "selected" : "")>Electricity</option>
                            <option value="Other" @(Model.ExpenseType == "Other" ? "selected" : "")>Other</option>
                        </select>
                        @Html.ValidationMessageFor(m => m.ExpenseType, "", new { @class = "text-danger mt-1" })
                    </div>

                    <!-- Amount -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Amount</label>
                        @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger mt-1" })
                    </div>

                    <!-- Expense Date -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Expense Date</label>
                        @Html.TextBoxFor(m => m.ExpenseDate, "{0:yyyy-MM-dd}", new { @class = "form-control shadow-sm", type = "date" })
                        @Html.ValidationMessageFor(m => m.ExpenseDate, "", new { @class = "text-danger mt-1" })
                    </div>

                    <!-- Notes -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Notes</label>
                        @Html.TextAreaFor(m => m.Notes, new { @class = "form-control shadow-sm", rows = 3, placeholder = "Add any notes..." })
                        @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "text-danger mt-1" })
                    </div>

                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-gradient btn-lg fw-bold">
                        <i class="bi bi-check-circle me-1"></i> Save Changes
                    </button>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-lg ms-2" })
                </div>
            }
        </div>
    </div>
</div>

<style>
    .btn-gradient {
        background: linear-gradient(90deg, #007bff, #00c6ff);
        border: none;
        color: white;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }
</style>
