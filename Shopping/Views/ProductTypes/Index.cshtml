@model IEnumerable<Shopping.Models.ProductType>
@{
    ViewBag.Title = "Product Types";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Product Types</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-circle"></i> Create New Type
        </button>
    </div>

    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search product types...">
    </div>

    <table class="table table-bordered table-striped" id="typesTable">
        <thead class="table-dark">
            <tr>
                <th>Type Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TypeName</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TypeId }, new { @class = "btn btn-sm btn-primary me-1" })
            
                        @Html.ActionLink("Delete", "Delete", new { id = item.TypeId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Create Product Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Type Name</label>
                        <input type="text" name="TypeName" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-success w-100">Save</button>
                </form>
                <div id="errorMsg" class="text-danger mt-2 d-none">Failed to create product type.</div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
    $(function () {
        // search
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#typesTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

       $("#createForm").submit(function (e) {
    e.preventDefault();

    $.ajax({
        url: '@Url.Action("Create", "ProductTypes")',
        type: "POST",
        data: $(this).serialize(),
        success: function (res) {
            if (res.success) {
                location.reload(); // refresh page
            } else {
                $("#errorMsg").removeClass("d-none").text(res.errors ? res.errors.join(", ") : "Failed to create product type.");
            }
        },
        error: function () {
            $("#errorMsg").removeClass("d-none").text("Server error while creating product type.");
        }
    });
});

    });
    </script>
}
