@model IEnumerable<Shopping.Models.ProductType>


@{
    ViewBag.Title = "Product Types";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Product Types</h2>
        @Html.ActionLink("Create New Type", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search product types...">
    </div>

    <table class="table table-bordered table-striped" id="typesTable">
        <thead class="table-dark">
            <tr>
                <th>Type Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TypeName</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TypeId }, new { @class = "btn btn-sm btn-primary me-1" })
                        @Html.ActionLink("Details", "Details", new { id = item.TypeId }, new { @class = "btn btn-sm btn-info me-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.TypeId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#typesTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
