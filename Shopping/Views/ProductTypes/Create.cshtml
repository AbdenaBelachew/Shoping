@model Shopping.Models.ProductType

@{
    ViewBag.Title = "Create Product Type";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-primary mb-4">Create Product Type</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <div class="row g-3">

            <!-- Product Type Name -->
            <div class="col-md-6">
                <label class="form-label"><i class="bi bi-tag-fill me-1"></i> Product Type Name</label>
                @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter product type name", required = "required" } })
                @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
            </div>

        </div>

        <!-- Submit Buttons -->
        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle-fill me-1"></i> Create
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
