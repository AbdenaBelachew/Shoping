@model Shopping.Models.ProductType

@{
    ViewBag.Title = "Edit Product Type";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-dark">
            <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Edit Product Type</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                @Html.HiddenFor(model => model.TypeId)

                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-tag-fill me-1"></i> Type Name</label>
                    @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter type name" } })
                    @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle-fill me-1"></i> Save
                    </button>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
